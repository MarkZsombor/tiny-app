<header>
    <% include ../partials/_header.ejs %>
</header>

<body>
  <li>

    <% for(var url in urls) { %>
      <p><%= url + ': ' + urls[url].long %></p>
      <a href="/urls/<%= url %>">Edit</a>

      <% if(user_id.id === urls[url].userID) { %>

        <form method="POST" action="/urls/<%= url %>/delete">
          <input type="submit" value="DELETE">
        </form>
      <% } %>

    <% } %>
  </li>

